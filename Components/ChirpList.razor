@using Chirper.Services
@using Chirper.Models
@inject ChirpService ChirpService


<div class="row">
    @foreach (var chirp in Chirps.OrderByDescending(c => c.CreatedAt))
    {
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <img class="rounded-circle me-3 align-self-start" src="Default-profile.png"
                        style="width: 50px; height: 50px;" alt="Profile Picture">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">@chirp.Author.UserName</h6>
                        <p class="card-text">@chirp.Content</p>
                        <small class="text-muted">@chirp.CreatedAt.ToString("g")</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@code {
    [Parameter] public List<Chirp> Chirps { get; set; } = new();


}